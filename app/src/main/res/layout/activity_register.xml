<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.feicuiedu.com.easyshop.user.register.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/title_register" />

    <EditText
        android:id="@+id/et_username"
        style="@style/AppTheme.EditText.Big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_120"
        android:drawableLeft="@drawable/selector_ic_person"
        android:hint="@string/username" />

    <EditText
        android:id="@+id/et_pwd"
        style="@style/AppTheme.EditText.Big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignStart="@+id/et_username"
        android:layout_below="@+id/et_username"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_6"
        android:drawableLeft="@drawable/selector_ic_lock"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_pwdAgain"
        style="@style/AppTheme.EditText.Big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignLeft="@+id/et_pwd"
        android:layout_alignStart="@+id/et_pwd"
        android:layout_below="@+id/et_pwd"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_6"
        android:drawableLeft="@drawable/selector_ic_lock"
        android:hint="@string/pwd_again"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/btn_register"
        style="@style/AppTheme.Button.YiTao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignLeft="@+id/et_pwdAgain"
        android:layout_alignStart="@+id/et_pwdAgain"
        android:layout_below="@+id/et_pwdAgain"
        android:layout_marginRight="@dimen/dp_50"
        android:enabled="false"
        android:text="@string/register" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

</RelativeLayout>
